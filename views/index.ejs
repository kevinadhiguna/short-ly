<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- Bootstrap for styling -->
		<link
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
			integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
			crossorigin="anonymous"
		/>
		<style type="text/css">
			html {
				scroll-behavior: smooth;
			}
			body {
				background-image: url(images/bg3.jpeg);
				margin-top: 10px;
				background-color: lemonchiffon;
			}
			.container {
				color: darkkhaki;
			}
		</style>
		<title>Short.ly</title>
	</head>
	<body>
		<div class="container">
			<h1>Short.ly - URL Shortner</h1>
			<!-- 'my-4' will add margin-top: 4 -->
			<form action="/shortUrls" method="POST" class="my-4 form-inline">
				<label for="fullUrl" class="sr-only">URL</label>
				<input
					required
					type="url"
					name="fullUrl"
					placeholder="Input your link here!"
					id="fullUrl"
					class="form-control col mr-2"
				/>
				<button type="submit" class="btn btn-success">Shorten URL</button>
			</form>

			<table class="table table-striped table-responsive">
				<thead>
					<tr>
						<th>Full URL</th>
						<th>Short URL</th>
						<th>Clicks</th>
					</tr>
				</thead>
				<tbody>
					<% shortUrls.forEach(shortUrl => { %>
					<tr>
						<td>
							<a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
						</td>
						<td>
							<a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
						</td>
						<td><%= shortUrl.clicks %></td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</body>
</html>
